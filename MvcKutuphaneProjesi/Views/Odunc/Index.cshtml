@using MvcKutuphaneProjesi.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div style="margin-top:20px;margin-bottom:20px">
    <input type="text" class="form-control" placeholder="Kitap adını giriniz..." />
</div>
<table class="table table-bordered">

    <tr>
        <th>ISLEM ID</th>
        <th>KİTAP AD</th>
        <th>UYE ADI</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİHİ</th>
        <th>İADE TARİHİ</th>
        <th>KİTAP DURUM</th>
       
    </tr>



    @foreach (var h in Model)
    {
        <tr>
            <td>@h.hareket_id</td>
            <td>@h.TBLKITAP.kitap_ad</td>
            <td>@h.TBLUYELER.uye_ad</td>
            <td>@h.TBLPERSONEL.personel_bilgi</td>
            <td>@h.hareket_alistarih</td>
            <td>@h.hareket_iadetarih</td>   
            <td>@h.TBLKITAP.kitap_durum</td>   
            <td><a href="/Odunc/Odunciade/@h.hareket_id" class="btn btn-danger">Kitap İade Al</a></td>

        </tr>
    }

</table>
